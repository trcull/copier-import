
<div class="row">
<%= form_tag '/admin/traffic', :method => :get, :class => 'form-inline' do  %>
	<div class="col-md-8">
		<div class='form-group'><%= text_field_tag 'start_dt', pretty_dt(@start_dt), :class=>'form_control' %></div>
		<div class="form-group">to</div>
		<div class='form-group'><%= text_field_tag 'end_dt', pretty_dt(@end_dt), :class=>'form_control' %></div>
	</div>
	<div class="col-md-2">
		<%= text_field_tag 'org_id', @org.id, :class=>'form_control' %>
	</div>
	<div class="col-md-2">
		<%= submit_tag 'Search',  :class=> 'form-control btn btn-primary' %>
	</div>
<% end %>
</div>


<%= render partial: 'traffic_results', locals: {events: @events, pageviews: @pageviews, start_dt: @start_dt, end_dt: @end_dt} %>

